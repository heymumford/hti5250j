  "_license": "SPDX-License-Identifier: GPL-2.0-or-later",
  "name": "hti5250j",
  "version": "0.8.1",
  "description": "Host Terminal Interface 5250j - Headless Telnet emulator for IBM i systems (successor to TN5250J)",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/heymumford/tn5250j-headless.git"
  },
  "bugs": {
    "url": "https://github.com/heymumford/tn5250j-headless/issues"
  },
  "homepage": "https://github.com/heymumford/tn5250j-headless",
  "license": "GPL-2.0-or-later",
  "author": {
    "name": "Eric C. Mumford",
    "email": "ericmumford@outlook.com"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "semantic-release": "^23.0.2"
  },
  "release": {
    "branches": [
      {
        "name": "main"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "build.properties",
            "src/org/hti5250j/HTI5250jConstants.java",
            "installer/install.xml",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}\n\nCo-Authored-By: semantic-release <semantic-release@github.com>"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
